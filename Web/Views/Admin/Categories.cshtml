@model IEnumerable<Infrastructure.Entities.Category>
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<p>
    <a asp-action="CreateCategory" class="btn btn-primary">Create New Category</a>
</p>

<table class="table table-bordered">
    <thead>
    <tr>
        <td>Image</td>
        <th>Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            @if (!string.IsNullOrEmpty(item.ImageUrl))
            {
                <td>
                    <img src="@item.ImageUrl" alt="@item.Name"
                         style="max-width: 100px; max-height: 100px; object-fit: cover;" />
                </td>
            }
            <td>@item.Name</td>
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>