@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">⚙️ Admin Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title mb-3">Products</h5>
                    <p class="text-muted">Manage your product catalog</p>
                    <a asp-action="Products" class="btn btn-dark w-100">Manage Products</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title mb-3">Categories</h5>
                    <p class="text-muted">Organize and edit categories</p>
                    <a asp-action="Categories" class="btn btn-dark w-100">Manage Categories</a>
                </div>
            </div>
        </div>
    </div>
</div>