@model IEnumerable<Infrastructure.Entities.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a asp-action="CreateProduct" class="btn btn-primary">Create New Product</a>
</p>

<table class="table table-bordered align-middle text-center">
    <thead class="table-light">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Active</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 80px; max-height: 80px; object-fit: cover;" />
                }
                else
                {
                    <span class="text-muted">No image</span>
                }
            </td>
            <td>@item.Name</td>
            <td>@item.Price.ToString("C")</td>
            <td>
                @if (item.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
            <td>
                <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>