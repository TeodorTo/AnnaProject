@model List<Infrastructure.Entities.OrderItem>

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductNameSnapshot</td>
                <td>@item.UnitPriceSnapshot:C</td>
                <td>@item.Quantity</td>
                <td>@item.LineTotal:C</td>
                <td>
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="text-end"><strong>Total:</strong></td>
            <td colspan="2">@ViewBag.Total:C</td>
        </tr>
        </tfoot>
    </table>

    <form asp-action="Checkout" method="post">
        <div class="mb-2">
            <label>City</label>
            <input name="shippingCity" class="form-control" required />
        </div>
        <div class="mb-2">
            <label>Street</label>
            <input name="shippingStreet" class="form-control" required />
        </div>
        <div class="mb-2">
            <label>ZIP</label>
            <input name="shippingZip" class="form-control" />
        </div>
        <button class="btn btn-success">Checkout</button>
    </form>

}