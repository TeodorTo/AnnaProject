@model List<Infrastructure.Entities.OrderItem>

<div class="container mt-4">
    <h2 class="mb-4">🛒 Your Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Your cart is empty.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductNameSnapshot</td>
                            <td>@item.UnitPriceSnapshot лв</td>
                            <td>@item.Quantity</td>
                            <td>@item.LineTotal</td>
                            <td>
                                <form asp-action="Remove" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr class="fw-bold">
                        <td colspan="3" class="text-end">Total:</td>
                        <td>@ViewBag.Total лв</td>
                        <td></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="card mt-4 shadow-sm">
            <div class="card-body">
                <h4 class="mb-3">Checkout</h4>
                <form asp-action="Checkout" method="post" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">City</label>
                        <input name="shippingCity" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Street</label>
                        <input name="shippingStreet" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">ZIP</label>
                        <input name="shippingZip" class="form-control" />
                    </div>
                    <div class="col-12">
                        <button class="btn btn-success btn-lg">Complete Order</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>
