<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="nav-buttons">
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index" >Web</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index" >Home</a>
                
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Admin</a>
                }
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-warning" asp-controller="Cart" asp-action="Index">
                        Cart (<vc:cart-count />)
                    </a>
                }
                
            </div>
            
            <div class="login-register">
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


@await RenderSectionAsync("Scripts", required: false)
</body>
</html>